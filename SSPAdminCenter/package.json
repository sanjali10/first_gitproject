{
    "name": "sspadmin",
    "version": "4.0.0",
    "license": "Apache",
    "scripts": {
        "postinstall": "npx electron-builder install-app-deps",
        "ng": "ng",
        "start": "ng serve",
        "build": "ng build --prod ",
        "gitbuild": "ng build --prod  --base /dist/",
        "test": "ng test",
        "lint": "ng lint",
        "e2e": "ng e2e",
        "doc:build": "compodoc -p tsconfig.app.json",
        "doc:serve": "compodoc -s",
        "doc:buildandserve": "compodoc -p tsconfig.json -s",
        "starte": "npm-run-all -p ng:serve --app 1 electron:serve ",
        "builde": "npm run electron:tsc && ng build sspadmin1  --prod",
        "builde:dev": "npm run builde -- -c dev",
        "builde:prod": "npm run builde",
        "ng:serve": "ng serve -o --app 1",
        "electron:tsc": "tsc main.ts",
        "electron:serve": "wait-on http-get://localhost:4200/ && npm run electron:tsc && electron . --serve",
        "electron:local": "npm run builde:prod && electron .",
        "electron:linux": "npm run builde:prod && npx electron-builder build --linux",
        "electron:windows": "npm run builde:prod && npx electron-builder build --windows",
        "electron:mac": "npm run builde:prod && npx electron-builder build --mac"
    },
    "private": true,
    "main": "main.js",
    "dependencies": {
        "@angular/animations": "~6.1.0",
        "@angular/cdk": "~6.1.0",
        "@angular/common": "~6.1.0",
        "@angular/compiler": "~6.1.0",
        "@angular/core": "~6.1.0",
        "@angular/flex-layout": "^6.0.0-beta.18",
        "@angular/forms": "~6.1.0",
        "@angular/http": "~6.1.0",
        "@angular/material": "~6.1.0",
        "@angular/platform-browser": "~6.1.0",
        "@angular/platform-browser-dynamic": "~6.1.0",
        "@angular/router": "~6.1.0",
        "@microsoft/microsoft-graph-client": "^1.0.0",
        "@microsoft/microsoft-graph-types": "^1.3.0",
        "@ng-bootstrap/ng-bootstrap": "^2.2.1",
        "@ngx-translate/core": "^10.0.2",
        "@ngx-translate/http-loader": "^3.0.1",
        "autoprefixer": "^8.6.5",
        "chart.js": "^2.7.2",
        "core-js": "^2.5.7",
        "font-awesome": "^4.7.0",
        "hammerjs": "^2.0.8",
        "msal": "^0.1.7",
        "ng2-charts": "^1.6.0",
        "ngx-device-detector": "^1.3.3",
        "reinstall": "^2.0.0",
        "rxjs": "^6.3.0",
        "yarn": "^1.10.1",
        "zone.js": "^0.8.19"
    },
    "devDependencies": {
        "@angular-devkit/build-angular": "~0.7.0",
        "@angular/cli": "~6.1.0",
        "@angular/compiler-cli": "~6.1.0",
        "@angular/language-service": "~6.1.0",
        "@compodoc/compodoc": "^1.1.5",
        "@types/jasmine": "^2.8.8",
        "@types/jasminewd2": "^2.0.4",
        "@types/node": "^6.0.117",
        "codelyzer": "~4.2.1",
        "electron": "^3.0.1",
        "electron-builder": "^20.28.4",
        "electron-reload": "^1.2.5",
        "jasmine-core": "~2.8.0",
        "jasmine-spec-reporter": "~4.2.1",
        "karma": "^2.0.5",
        "karma-chrome-launcher": "~2.2.0",
        "karma-cli": "~1.0.1",
        "karma-coverage-istanbul-reporter": "^1.4.3",
        "karma-jasmine": "^1.1.2",
        "karma-jasmine-html-reporter": "^0.2.2",
        "protractor": "~5.1.2",
        "rxjs-tslint-rules": "^4.7.2",
        "ts-node": "~4.1.0",
        "tslint": "~5.9.1",
        "typescript": "~2.9.2"
    }
}
